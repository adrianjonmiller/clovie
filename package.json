{
  "name": "clovie",
  "version": "0.1.2",
  "description": "Vintage web dev tooling with modern quality of life",
  "keywords": [
    "static-site-generator",
    "ssg",
    "templating",
    "handlebars",
    "nunjucks",
    "pug",
    "mustache",
    "scss",
    "esbuild",
    "live-reload",
    "development-server",
    "web-development",
    "nodejs"
  ],
  "license": "MIT",
  "author": {
    "name": "Adrian Miller",
    "email": "code.mill@fastmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianjonmiller/clovie.git"
  },
  "homepage": "https://github.com/adrianjonmiller/clovie#readme",
  "bugs": {
    "url": "https://github.com/adrianjonmiller/clovie/issues"
  },
  "main": "lib/main.js",
  "type": "module",
  "bin": {
    "clovie": "bin/cli.js"
  },
  "files": [
    "lib/**/*",
    "bin/**/*",
    "config/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:run": "vitest run",
    "build": "node build.config.js",
    "docs:build": "cd docs && node ../dist/clovie.js build",
    "docs:dev": "cd docs && node ../dist/clovie.js watch",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "esbuild": "^0.19.11",
    "chokidar": "^3.5.3",
    "command-line-args": "^5.2.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "sass": "^1.69.5",
    "socket.io": "^4.7.4",
    "type-detect": "^4.0.8",
    "babelify": "^10.0.0"
  },
  "devDependencies": {
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
