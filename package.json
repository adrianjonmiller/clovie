{
  "name": "clovie",
  "version": "0.1.28",
  "description": "Vintage web dev tooling with modern quality of life",
  "keywords": [
    "static-site-generator",
    "ssg",
    "templating",
    "handlebars",
    "nunjucks",
    "pug",
    "mustache",
    "scss",
    "esbuild",
    "live-reload",
    "development-server",
    "web-development",
    "nodejs"
  ],
  "license": "MIT",
  "author": {
    "name": "Adrian Miller",
    "email": "code.mill@fastmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/adrianjonmiller/clovie.git"
  },
  "homepage": "https://github.com/adrianjonmiller/clovie#readme",
  "bugs": {
    "url": "https://github.com/adrianjonmiller/clovie/issues"
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/cjs/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./cli": "./bin/cli.js"
  },
  "bin": {
    "clovie": "bin/cli.js"
  },
  "files": [
    "dist/",
    "bin/**/*",
    "config/**/*",
    "scripts/**/*",
    "templates/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "npm run clean && rollup -c && npm run build:types",
    "build:types": "node scripts/build-types.js",
    "clean": "rm -rf dist",
    "dev": "node ./bin/cli.js watch --config ./__dev__/clovie.config.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "size-check": "npm run build && du -sh dist/*",
    "kill:port": "node ./bin/kill-port.js",
    "kill:3000": "node ./bin/kill-port.js 3000",
    "kill:common": "node ./bin/kill-port.js --common",
    "kill:check": "node ./bin/kill-port.js --check",
    "docs:build": "cd docs && npm install && npm run build",
    "docs:dev": "cd docs && npm install && npm run dev",
    "docs:serve": "cd docs && npm install && npm run serve",
    "prepublishOnly": "npm run build && npm test",
    "publish:build": "node scripts/publish.js build",
    "publish:test": "node scripts/publish.js test",
    "publish:docs": "node scripts/publish.js docs",
    "publish:dry-run": "node scripts/publish.js dry-run",
    "publish:patch": "node scripts/publish.js patch",
    "publish:minor": "node scripts/publish.js minor",
    "publish:major": "node scripts/publish.js major",
    "publish:beta": "node scripts/publish.js beta",
    "publish:do": "node scripts/publish.js do",
    "publish:info": "node scripts/publish.js info"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "chokidar": "^3.5.3",
    "cli-progress": "^3.12.0",
    "command-line-args": "^5.2.1",
    "esbuild": "^0.19.11",
    "eta": "^4.0.1",
    "express": "^4.18.2",
    "handlebars": "^4.7.8",
    "istextorbinary": "^9.5.0",
    "nunjucks": "^3.2.4",
    "pug": "^3.0.3",
    "sass": "^1.69.5",
    "socket.io": "^4.7.4",
    "urlpattern-polyfill": "^10.1.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-env": "^7.23.7",
    "@brickworks/database-ext": "^1.0.4",
    "@brickworks/engine": "1.1.19",
    "babelify": "^10.0.0",
    "type-detect": "^4.0.8",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "rollup": "^4.52.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "vitest": "^1.0.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
